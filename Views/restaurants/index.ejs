<%layout ('layout/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/buttons.css">
<div id="map" style="width: 100%; height: 500px;" class="mb-3"></div>


<% for (var i= 0; i < allRestaurants.length ; i+=2) {%>
    <div class="d-flex justify-content-center">
    <div class="card mb-3 d-flex mx-2" style="width: 38%" id="cards">
        <div class="row">
            <div class="col-md-6">
                <% if (allRestaurants[i].Images.length){ %>
                    <img src="<%=allRestaurants[i].Images[0].url %> " alt="" class="img-fluid" id="image">
                <% }  else{ %>  
                    <img src="https://res.cloudinary.com/sakchham/image/upload/v1649693766/CSCE-3444/fabrizio-magoni-boaDpmC-_Xo-unsplash_cuyrvo.jpg" alt="" class="img-fluid" id="image">
                <% } %> 
            </div>
            <div class="col-md-6 text-center">
                <div class="card-body">
                    <h5 class="card-title ">
                        <%=allRestaurants[i].Name%>
                    </h5>
                    <p class="card-text">
                        <%= allRestaurants[i].Location %> 
                    </p>
                </div>
                <a class="btn" id="views" href="/restaurants/<%=allRestaurants[i]._id%>"><span class="iconify" data-icon="carbon:add-filled" style="color: rgba(255, 255, 255, 0.5);"></span> Details</a>    
            </div>
        </div>
    </div>
    <% if (i !== allRestaurants.length -1){ %> 
    <div class="card mb-3 d-flex mx-2" style="width: 38%" id="cards">
        <div class="row">
            <div class="col-md-6">
                <% if (allRestaurants[i+1].Images.length){ %>
                    <img src="<%=allRestaurants[i+1].Images[0].url %> " alt="" class="img-fluid" id="image">
                    <% } else{ %>
                        <img src="https://res.cloudinary.com/sakchham/image/upload/v1649693766/CSCE-3444/fabrizio-magoni-boaDpmC-_Xo-unsplash_cuyrvo.jpg"
                            alt="" class="img-fluid" id="image">
                        <% } %>
            </div>
            <div class="col-md-6 text-center">
                <div class="card-body">
                    <h5 class="card-title ">
                        <%=allRestaurants[i+1].Name%>
                    </h5>
                    <p class="card-text">
                        <%= allRestaurants[i+1].Location %>
                    </p>
                </div>
                <a class="btn" id="views" href="/restaurants/<%=allRestaurants[i+1]._id%>"><span class="iconify"
                        data-icon="carbon:add-filled" style="color: rgba(255, 255, 255, 0.5);"></span> Details</a>
            </div>
        </div>
    </div>
    </div>
    <% } %> 
<%}%>
