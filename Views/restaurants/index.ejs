<%layout ('layout/boilerplate')%>
<div id="map" style="width: 100%; height: 500px;"></div>
<h1>All Restaurants</h1>
<% for (let restaurant of allRestaurants) {%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <% if (restaurant.Images.length){ %>
                    <img src="<%=restaurant.Images[0].url %> " alt="" class="img-fluid">
                <% }  else{ %>  
                    <img src="https://res.cloudinary.com/sakchham/image/upload/v1649693766/CSCE-3444/fabrizio-magoni-boaDpmC-_Xo-unsplash_cuyrvo.jpg" alt="" class="img-fluid">
                <% } %> 
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=restaurant.Name%>
                    </h5>
                    <p class="card-text">
                        <%= restaurant.Location %> 
                    </p>
                </div>
                <a class="btn btn-primary" href="/restaurants/<%=restaurant._id%>">View <%=restaurant.Name%></a>
            </div>
        </div>
        </div>
    </div>    
<%}%>
