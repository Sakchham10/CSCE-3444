<%layout ('layout/boilerplate')%>
<h1>All Restaurants</h1>

<% for (let restaurant of allRestaurants) {%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=restaurant.Name%>
                    </h5>
                </div>
                <a class="btn btn-primary" href="/restaurants/<%=restaurant._id%>">View <%=restaurant.Name%></a>
            </div>
        </div>
    </div>    
<%}%>
