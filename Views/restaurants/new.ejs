<%layout ('layout/boilerplate')%>
<h1 class="text-center">New Restaurant</h1>
<div class="row">
    <div class="col-6 offset-3">
        <form action="/restaurants" method="post" class="needs-validation" novalidate>
            <div>
                <label class="form-label" for="Name">Full Name</label>
                <input class="form-control" type="text" id="Name" placeholder="Name" name="restaurant[Name]"
                    required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="Location">Location</label>
                <input class="form-control" type="text" id="Location" placeholder="Location"
                    name="restaurant[Location]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="MostPopular Item">MostPopularItem</label>
                <input class="form-control" type="text" id="MostPopular Item" placeholder="Item"
                    name="restaurant[MostPopular]">
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="EUID">EUID</label>
                <input class="form-control" type="text" id="EUID" placeholder="Item" name="restaurant[EUID]">
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Restaurant</button>
            </div>
        </form>
        <footer>
            <a href="/restaurants">Cancel</a>
        </footer>
    </div>
</div>



